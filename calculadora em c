#include <stdio.h>
#include <stdlib.h>

main(){
float x,y;
int resultado,op;
/* colocando pedidos na tela*/
	printf("\n escolha as operacoes: 1-soma 2-subtracao 3-multiplicacao 4-divisao \n ");
	printf("coloque o numero:\n");
	scanf("%f",&x);
	printf("qual operacao:\n");
	scanf("%d",&op);
	printf("coloque o numero:\n");
	scanf("%f",&y);
	if(op == 1){
		resultado = x + y;
	}
	else if(op == 2){
		resultado = x - y;
	}
	else if(op == 3){
		resultado = x * y;
	}
	else if(op == 4){
		resultado = x / y;
	}
	else{
		resultado = 0;
		printf("nenhuma operacao foi feita ");
	}
	

	printf("o resultado e: %d :",resultado);
		
	
	
	
	system("pause");
}
